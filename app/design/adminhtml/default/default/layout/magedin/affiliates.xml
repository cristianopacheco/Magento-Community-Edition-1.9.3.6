<?xml version="1.0"?>
<layout version="0.1.0">
    <adminhtml_affiliate_index>
        <reference name="content">
            <block type="magedin_affiliates/adminhtml_affiliate" name="magedin.affiliate.grid.container"/>
        </reference>
    </adminhtml_affiliate_index>
    <adminhtml_affiliate_grid>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="magedin_affiliates/adminhtml_affiliate_grid" name="magedin.affiliate.grid"/>
        </block>
    </adminhtml_affiliate_grid>
    <adminhtml_affiliate_balance>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="magedin_affiliates/adminhtml_affiliate_edit_tab_balance" name="magedin.affiliate.balance.form"/>
        </block>
    </adminhtml_affiliate_balance>
    <adminhtml_affiliate_orders>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="magedin_affiliates/adminhtml_affiliate_edit_tab_orders" name="magedin.affiliate.orders.grid"/>
        </block>
    </adminhtml_affiliate_orders>
    <adminhtml_affiliate_history>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="magedin_affiliates/adminhtml_affiliate_edit_tab_history" name="magedin.affiliate.history.grid"/>
        </block>
    </adminhtml_affiliate_history>
    <adminhtml_affiliate_edit>
        <reference name="left">
            <block type="magedin_affiliates/adminhtml_affiliate_edit_tabs" name="magedin.affiliate.edit.tabs"/>
        </reference>
        <reference name="content">
            <block type="magedin_affiliates/adminhtml_affiliate_edit" name="magedin.affiliate.edit"/>
        </reference>
    </adminhtml_affiliate_edit>
    <adminhtml_sales_order_view>
        <reference name="sales_order_tabs">
            <action method="addTabAfter">
                <tabId>order_affiliates</tabId>
                <tab>magedin_affiliates/adminhtml_sales_order_view_tab_affiliate</tab>
                <afterTabId>order_info</afterTabId>
            </action>
        </reference>
    </adminhtml_sales_order_view>
</layout>
