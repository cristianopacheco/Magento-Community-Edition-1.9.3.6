<?xml version="1.0"?>
<config>
    <modules>
        <MagedIn_Affiliates>
            <version>0.1.1</version>
        </MagedIn_Affiliates>
    </modules>
    <global>
        <models>
            <magedin_affiliates>
                <class>MagedIn_Affiliates_Model</class>
                <resourceModel>magedin_affiliates_resource</resourceModel>
            </magedin_affiliates>
            <magedin_affiliates_resource>
                <class>MagedIn_Affiliates_Model_Resource</class>
                <entities>
                    <entity>
                        <table>magedin_affiliates_entity</table>
                    </entity>
                    <order>
                        <table>magedin_affiliates_order</table>
                    </order>
                    <history>
                        <table>magedin_affiliates_history</table>
                    </history>
                    <balance>
                        <table>magedin_affiliates_balance</table>
                    </balance>
                </entities>
            </magedin_affiliates_resource>
        </models>
        <resources>
            <magedin_affiliates_setup>
                <setup>
                    <module>MagedIn_Affiliates</module>
                    <class>MagedIn_Affiliates_Model_Resource_Setup</class>
                </setup>
            </magedin_affiliates_setup>
        </resources>
        <blocks>
            <magedin_affiliates>
                <class>MagedIn_Affiliates_Block</class>
            </magedin_affiliates>
        </blocks>
        <helpers>
            <magedin_affiliates>
                <class>MagedIn_Affiliates_Helper</class>
            </magedin_affiliates>
        </helpers>
        <fieldsets>
            <sales_convert_quote>
                <affiliate_id>
                    <to_order>*</to_order>
                </affiliate_id>
            </sales_convert_quote>
            <sales_convert_order>
                <affiliate_id>
                    <to_quote>*</to_quote>
                </affiliate_id>
            </sales_convert_order>
        </fieldsets>
        <events>
            <sales_order_invoice_register>
                <observers>
                    <magedin_affiliates_order_invoice_register>
                        <class>magedin_affiliates/observer</class>
                        <method>orderInvoiceRegister</method>
                    </magedin_affiliates_order_invoice_register>
                </observers>
            </sales_order_invoice_register>
            <order_cancel_after>
                <observers>
                    <magedin_affiliates_process_order_cancellation>
                        <class>magedin_affiliates/observer</class>
                        <method>processOrderCancellation</method>
                    </magedin_affiliates_process_order_cancellation>
                </observers>
            </order_cancel_after>
            <sales_order_creditmemo_refund>
                <observers>
                    <magedin_affiliates_process_order_refund>
                        <class>magedin_affiliates/observer</class>
                        <method>processOrderRefund</method>
                    </magedin_affiliates_process_order_refund>
                </observers>
            </sales_order_creditmemo_refund>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <magedin_affiliates>
                    <file>magedin/affiliates.xml</file>
                </magedin_affiliates>
            </updates>
        </layout>
        <translate>
            <modules>
                <magedin_affiliates>
                    <files>
                        <default>MagedIn/Affiliates.csv</default>
                    </files>
                </magedin_affiliates>
            </modules>
        </translate>
        <events>
            <controller_action_predispatch>
                <observers>
                    <magedin_affiliates_assign_affiliate_query_parameter>
                        <class>magedin_affiliates/observer</class>
                        <method>assignAffiliateQueryParam</method>
                    </magedin_affiliates_assign_affiliate_query_parameter>
                </observers>
            </controller_action_predispatch>
            <sales_quote_collect_totals_before>
                <observers>
                    <magedin_affiliates_assign_affiliate_to_quote>
                        <class>magedin_affiliates/observer</class>
                        <method>assignAffiliateToQuote</method>
                    </magedin_affiliates_assign_affiliate_to_quote>
                </observers>
            </sales_quote_collect_totals_before>
            <sales_model_service_quote_submit_success>
                <observers>
                    <magedin_affiliates_remove_affiliate_cookie>
                        <class>magedin_affiliates/observer</class>
                        <method>removeAffiliateCookie</method>
                    </magedin_affiliates_remove_affiliate_cookie>
                </observers>
            </sales_model_service_quote_submit_success>
        </events>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <magedin_affiliates>
                    <file>magedin/affiliates.xml</file>
                </magedin_affiliates>
            </updates>
        </layout>
        <translate>
            <modules>
                <magedin_affiliates>
                    <files>
                        <default>MagedIn/Affiliates.csv</default>
                    </files>
                </magedin_affiliates>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <magedin_affiliates before="Mage_Adminhtml">MagedIn_Affiliates_Adminhtml</magedin_affiliates>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <magedin_affiliates>
            <calculation>
                <commission_calculation_base>2</commission_calculation_base>
            </calculation>
        </magedin_affiliates>
    </default>
</config>
